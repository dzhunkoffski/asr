{
    "name": "deep_speech_v2",
    "n_gpu": 1,
    "preprocessing": {
      "sr": 16000,
      "spectrogram": {
        "type": "MelSpectrogram",
        "args": {
          "n_mels": 160
        }
      },
      "log_spec": true
    },
    "augmentations": {
      "wave": [
        {
            "type": "GaussianNoise",
            "args": {
                "p": 0.1,
                "mean": 0,
                "std": 0.5
            }
        },
        {
            "type": "SpeedPerturbation",
            "args": {
                "p": 0.25,
                "orig_freq": 16000,
                "factors": [0.75, 1.25, 0.8, 0.9, 1.1]

            }
        }
      ],
      "spectrogram": []
    },
    "arch": {
        "type": "DeepSpeechV2",
        "args": {
            "n_feats": 160,
            "rnn_layers": 5,
            "rnn_dropout": 0.1,
            "conv_dropout": 0.3,
            "rnn_normalization": true
        }
    },
    "data": {
      "train": {
        "batch_size": 32,
        "num_workers": 5,
        "datasets": [
          {
            "type": "LibrispeechDataset",
            "args": {
                "part": "train-clean-100",
                "max_audio_length": 20.0,
                "max_text_length": 200
            }
          }
        ]
      },
      "val": {
        "batch_size": 32,
        "num_workers": 5,
        "datasets": [
          {
            "type": "LibrispeechDataset",
            "args": {
              "part": "test-clean"
            }
          }
        ]
      }
    },
    "optimizer": {
      "type": "SGD",
      "args": {
        "lr":  0.001,
        "momentum": 0.9
      }
    },
    "loss": {
      "type": "CTCLoss",
      "args": {}
    },
    "metrics": [
      {
        "type": "ArgmaxWERMetric",
        "args": {
          "name": "WER (argmax)"
        }
      },
      {
        "type": "ArgmaxCERMetric",
        "args": {
          "name": "CER (argmax)"
        }
      },
      {
        "type": "LMBeamSearchWERMetric",
        "args": {
          "name": "WER (lm beam search)",
          "beam_size": 10,
          "epoch_freq": 15
        }
      },
      {
        "type": "LMBeamSearchCERMetric",
        "args": {
          "name": "CER (lm beam search)",
          "beam_size": 10,
          "epoch_freq": 15
        }
      },
      {
        "type": "NoLMBeamSearchWERMetric",
        "args": {
          "name": "WER (beam search)",
          "beam_size": 10,
          "epoch_freq": 10
        }
      },
      {
        "type": "NoLMBeamSearchCERMetric",
        "args": {
          "name": "CER (beam search)",
          "beam_size": 10,
          "epoch_freq": 10
        }
      }
    ],
    "lr_scheduler": {
        "type": "PolynomialLR",
        "args": {
            "total_iters": 30001,
            "power": 0.5
        }
    },
    "trainer": {
      "epochs": 50,
      "save_dir": "saved/",
      "save_period": 5,
      "verbosity": 2,
      "monitor": "min val_loss",
      "early_stop": 100,
      "visualize": "wandb",
      "wandb_project": "asr_project",
      "len_epoch": 600,
      "grad_norm_clip": 10,
      "lm_beam_search_logging_freq": 15,
      "lm_beam_search_size": 10,
      "beam_search_logging_freq": 10,
      "beam_search_size": 10
    },
    "text_encoder": {
      "type": "CTCCharTextEncoder",
      "args": {
        "lm_name": "3-gram.pruned.1e-7"
      }
    }
  }
  