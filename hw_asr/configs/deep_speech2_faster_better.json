{
    "name": "deep_speech_v2",
    "n_gpu": 1,
    "preprocessing": {
      "sr": 16000,
      "spectrogram": {
        "type": "MelSpectrogram",
        "args": {
          "n_mels": 128
        }
      },
      "log_spec": true
    },
    "augmentations": {
      "wave": [
        {
          "type": "PitchShift",
          "args": {
            "sample_rate": 16000,
            "n_steps": 4,
            "p": 0.25
          }
        },
        {
          "type": "SpeedPerturbation",
          "args": {
            "p": 0.25,
            "orig_freq": 16000,
            "factors": [0.75, 0.75, 0.9, 1.1, 1.25, 1.25]
          }
        }
      ]
    },
    "arch": {
        "type": "DeepSpeechV2",
        "args": {
            "n_feats": 128,
            "rnn_layers": 5,
            "rnn_dropout": 0.05,
            "conv_dropout": 0.3,
            "rnn_normalization": true
        }
    },
    "data": {
      "train": {
        "batch_size": 20,
        "num_workers": 4,
        "datasets": [
          {
            "type": "LibrispeechDataset",
            "args": {
                "part": "train-clean-100",
                "max_audio_length": 20.0,
                "max_text_length": 200
            }
          }
        ]
      },
      "val": {
        "batch_size": 16,
        "num_workers": 4,
        "datasets": [
          {
            "type": "LibrispeechDataset",
            "args": {
              "part": "test-clean"
            }
          }
        ]
      }
    },
    "optimizer": {
      "type": "AdamW",
      "args": {
        "lr":  3e-4
      }
    },
    "loss": {
      "type": "CTCLoss",
      "args": {
        "zero_infinity": true
      }
    },
    "metrics": [
      {
        "type": "ArgmaxWERMetric",
        "args": {
          "name": "WER (argmax)"
        }
      },
      {
        "type": "ArgmaxCERMetric",
        "args": {
          "name": "CER (argmax)"
        }
      }
    ],
    "lr_scheduler": {
        "type": "OneCycleLR",
        "args": {
            "max_lr": 3e-4,
            "steps_per_epoch": 600,
            "epochs": 51,
            "pct_start": 0.1,
            "anneal_strategy": "cos"
        }
    },
    "trainer": {
      "epochs": 50,
      "save_dir": "saved/",
      "save_period": 5,
      "verbosity": 2,
      "monitor": "min val_loss",
      "early_stop": 100,
      "visualize": "wandb",
      "wandb_project": "asr_project",
      "len_epoch": 600,
      "grad_norm_clip": 10,
      "lm_beam_search_logging_freq": 5,
      "lm_beam_search_size": 20,
      "beam_search_logging_freq": 5,
      "beam_search_size": 20
    },
    "text_encoder": {
      "type": "CTCCharTextEncoder",
      "args": {
        "lm_name": "3-gram"
      }
    }
  }
